# MongoDB Connection (Required)
# Use your MongoDB Atlas URI or local MongoDB URI
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/product-portfolio?retryWrites=true&w=majority

# JWT Authentication (Required)
# A long random string for securing admin login
JWT_SECRET=your_jwt_secret_here



# Razorpay Credentials (Required for checkout)
RAZORPAY_ID=rzp_test_your_id
RAZORPAY_KEY=your_razorpay_secret_key

# Public Keys (Prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_RAZORPAY_ID=rzp_test_your_id

# Cloudinary (Optional - for image storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
